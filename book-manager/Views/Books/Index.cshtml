@model IEnumerable<book_manager.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="#" data-action='Create' class="btn btn-success">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Novo Livro
    </a>
</p>

<table id="booksGrid">
    <thead>
        <tr>
            <th data-column-id="Title" data-order="asc">Title</th>
            <th data-column-id="Author">Author</th>
            <th data-column-id="YearEdition">Year of Edition</th>
            <th data-column-id="Value">Value</th>
            <th data-formatter="Actions"></th>
        </tr>
    </thead>
</table>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="modalContent"></div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.bootgrid.js"></script>
    <script src="~/Scripts/project/controlBootgrid.js"></script>

    <script type="text/javascript">
        $(document).ready(configureControls);

        const listUrl = "@Url.Action("List")";        
    </script>

}